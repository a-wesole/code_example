load_root() {
module purge
unset PYTHONPATH
export PYTHONPATH=/home/wxie
source /cvmfs/sft.cern.ch/lcg/external/gcc/4.8.4/x86_64-centos7/setup.sh
source /cvmfs/sft.cern.ch/lcg/app/releases/ROOT/6.24.02/x86_64-centos7-gcc48-opt/bin/thisroot.sh
module load cmake/3.15.4
module load anaconda/5.1.0-py36; source activate myPythonEnv
unset JUPYTER_CONFIG_DIR 
}

eval load_root

